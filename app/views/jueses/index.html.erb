<%= render 'left' %>
<%= render 'top' %>

<div class="col-lg-12">
  <div class="ibox float-e-margins">
    <div class="ibox-title">
      <h5>角色管理</h5>

    </div>
    <div class="ibox-content">

      <table class="table table-hover table-bordered">
        <thead>
        <tr>
          <th>角色</th>
          <th>操作</th>
        </tr>
        </thead>
        <tbody>
        <% @jueses.each do |juese| %>
            <tr>
              <td>
                <%= juese.juese %>
              </td>
              <td>

                <%= link_to "", edit_juese_path(juese),class: "fa fa-pencil" %>&nbsp;
                <%= link_to '', juese, class: "fa fa-trash", method: :delete, data: { confirm: 'Are you sure?' } %>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <%= link_to "新增", new_juese_path,class: "btn btn-w-m btn-success mylink pull-right" %>
      <br>
    </div>

  </div>
</div>