<script>
    $(document).ready(function () {
        $('.file-box').each(function () {
            animationHover(this, 'pulse');
        });
    });
</script>
<br>
<h3>&nbsp;&nbsp;&nbsp;&nbsp;简历</h3>


<% @peo.jianlis.each do |f| %>

    <div class="file-box">
      <div class="file">
        <a href=<%= f.jianli.url %>>
          <span class="corner"></span>

          <div class="image" align="center">


<% if f.jianli_content_type[0,5] =="image" %>
           <img src=<%= f.jianli.url %> width=100px>
            <% else %>
                <img src=<%= image_path('attch.png') %> width=100px>
            <% end %>




          </div>
          <div class="file-name">
<%= f.jianliname %>
            <%= link_to '',[f.peo,f], class: "fa fa-trash pull-right fa-2x", method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </a>
      </div>
    </div>

<% end %>

<div class="ibox-content">

<%= form_for([@peo,@peo.jianlis.build],:html => {:class=>'form-horizontal m-t',id:"signupForm",:multipart => true}) do |f| %>

    <div class="form-group">
      <label class="col-sm-3 control-label">简历名称：</label>
      <div class="col-sm-3">
        <%= f.text_field :jianliname ,class:"form-control"%>
      </div>
      </div>

    <div class="form-group">
      <label class="col-sm-3 control-label">选择简历：</label>
      <div class="col-sm-3">
        <%= f.file_field :jianli ,class:"form-control"%>
      </div>
      </div>

      <div class="form-group">
        <label class="col-sm-3 control-label"></label>
        <div class="col-sm-3">
        <button class="btn btn-w-m btn-success mylink" type="submit">上传简历</button>
          </div>
      </div>
    </div>
<% end %>
  </div>

