<script>
    $(document).ready(function () {
        $('.file-box').each(function () {
            animationHover(this, 'pulse');
        });
    });
</script>
<br>
<h3>&nbsp;&nbsp;&nbsp;&nbsp;获奖证书</h3>


  <% @zhengzhao.huojiangzhenshus.each do |f| %>

    <div class="file-box">
      <div class="file">
        <a href="file_manager.html#">
          <span class="corner"></span>

          <div class="image">



      <%= image_tag(f.zhenshu,width: "300px") %>
          </div>
          <div class="file-name">

            <%= link_to '',[f.zhengzhao,f], class: "fa fa-trash pull-right fa-2x",style:"margin-top:-15px;", method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </a>
      </div>
    </div>

  <% end %>


<%= form_for([@zhengzhao,@zhengzhao.huojiangzhenshus.build],:html => {:class=>'form-horizontal m-t',id:"signupForm",:multipart => true}) do |f| %>
    <div class="form-group">
      <div class="col-sm-3">
        <%= f.file_field :zhenshu ,class:"form-control"%>
      </div>
      <div>

        <button class="btn btn-w-m btn-success mylink" type="submit">上传获奖证书</button>
      </div>
    </div>
<% end %>
