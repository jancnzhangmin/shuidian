<%= render 'left' %>
<%= render 'top' %>

<div class="col-lg-12">
  <div class="ibox float-e-margins">
    <div class="ibox-title">
      <h5>证照管理</h5>

    </div>
    <div class="ibox-content">

      <table class="table table-hover table-bordered">
        <thead>
        <tr>
          <th>公司名称</th>
          <th>操作</th>
        </tr>
        </thead>
        <tbody>
        <% @zhengzhaos.each do |zhengzhao| %>
            <tr>
              <td>

                <%= link_to zhengzhao.namecompany,zhengzhao_path(zhengzhao) %>
              </td>
              <td>
                <% if session[:auth]=='1' %>
                <%= link_to "", edit_zhengzhao_path(zhengzhao),class: "fa fa-pencil" %>&nbsp;
                <%= link_to '', zhengzhao, class: "fa fa-trash", method: :delete, data: { confirm: 'Are you sure?' } %>
                    <% end %>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <% if session[:auth]=='1' %>
      <%= link_to "新增", new_zhengzhao_path,class: "btn btn-w-m btn-success mylink pull-right" %>
          <% end %>
      <br>
    </div>

  </div>
</div>