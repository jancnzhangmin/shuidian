<%= render 'left' %>
<%= render 'top' %>

<div class="col-lg-12">
  <div class="ibox float-e-margins">
    <div class="ibox-title">
      <h5>guanliyuan</h5>

    </div>
    <div class="ibox-content">

      <table class="table table-hover table-bordered">
        <thead>
        <tr>
          <th>用户名</th>
          <th>账号</th>
          <th>权限</th>
          <th>状态</th>
          <th>操作</th>
        </tr>
        </thead>
        <tbody>
        <% @admins.each do |admin| %>
            <tr>
              <td>
                <%= admin.name %>
              </td>
              <td>
                <%= admin.login %>
              </td>
              <td>
                <%= admin.authority %>
              </td>
              <td>
                <% if admin.status ==0 %>
                    disabled
                <% else %>
                    enabled
                <% end %>
              </td>
              <td>
                <% if session[:auth]=='1' %>
                <%= link_to "", edit_admin_path(admin),class: "fa fa-pencil" %>&nbsp;
              <%= link_to '', admin, class: "fa fa-trash", method: :delete, data: { confirm: 'Are you sure?' } %>
                    <% end %>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <% if session[:auth]=='1' %>
      <%= link_to "new", new_admin_path,class: "btn btn-w-m btn-success mylink pull-right",'data-no-turbolink'=>true %>
          <% end %>
      <br>
    </div>

  </div>
</div>


