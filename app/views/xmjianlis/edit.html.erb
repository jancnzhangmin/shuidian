<%= render 'left' %>
<%= render 'top' %>


<script language="JavaScript">
    $(document).ready(function () {
        $('.alert').hide();


        //$('#alert_lab').html('不能为空！');

        $('#select_coun').change(function() {
            $('#hidden_coun').val($(this).children('option:selected').val());
        });
        $('#select_language').change(function() {
            $('#hidden_language').val($(this).children('option:selected').val());
        });


        $('#submit').click(function()
        {
            if($('#projectname').val()=='')
            {


                $('#alert_lab').html('项目名称不能为空！');
                $('.alert').show();
                return false;
            }
            if ($('#hidden_coun').val()=='-1' || $('#hidden_coun').val()=='')
            {
                $('#alert_lab').html('请选择国家！');
                $('.alert').show();
                return false;
            }
            if ($('#hidden_language').val()=='-1' || $('#hidden_language').val()=='')
            {
                $('#alert_lab').html('请选择语言！');
                $('.alert').show();
                return false;
            }

        });


        });


</script>


<div class="ibox-content">
  <div class="alert alert-danger text-center">
    <label id="alert_lab"></label></a>
  </div>
  <%= form_for(@xmjianli, :html => {:class=>'form-horizontal m-t'}) do |f| %>



      <div class="form-group">
        <label class="col-sm-3 control-label">项目名称</label>
        <div class="col-sm-5">
          <%= f.text_field :name ,class:"form-control", id:'projectname'%>
        </div>
      </div>







      <div class="form-group">
        <label class="col-sm-3 control-label">国家</label>
        <div class="col-sm-5">
          <%= f.hidden_field :xmcoun_id ,id:"hidden_coun" %>
          <select class="form-control m-b" id="select_coun">
            <option value="-1">请选择国家</option>
            <% @couns.each do |coun| %>
                <option value=<%= coun.id %>><%= coun.coun %></option>
            <% end %>
          </select>

        </div>
      </div>



      <div class="form-group">
        <label class="col-sm-3 control-label">语言</label>
        <div class="col-sm-5">
          <%= f.hidden_field :xmlanguage_id ,id:"hidden_language" %>
          <select class="form-control m-b" id="select_language">
            <option value="-1">请选择语言</option>
            <% @languages.each do |language| %>
                <option value=<%= language.id %>><%= language.language %></option>
            <% end %>
          </select>

        </div>
      </div>

      <%= f.hidden_field :isnew,value:'0' %>

      <div class="form-group">
        <div class="col-sm-5 col-sm-offset-3">
          <button class="btn btn-w-m btn-success mylink pull-right" type="submit" id="submit">确定</button>

        </div>
      </div>






  <% end %>
  <%= render 'xmatts/form' %>
</div>